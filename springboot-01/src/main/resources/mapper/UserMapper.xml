<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.qfzz.mapper.UserMapper">
    <select id="findAll" resultType="com.qfzz.entity.User">
        select * from user;
    </select>

    <select id="findById" resultType="com.qfzz.entity.User">
        select * from user where id = #{id};
    </select>
</mapper>